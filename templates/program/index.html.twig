{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}


{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    {% for program in programs %}
        

        <div class="card" style="width: 18rem;">
        <img src="{{program.poster}}" class="card-img-top" alt="...">
        <div class="card-body">
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            <a class="btn btn-primary" href="{{ path("program_show", { slug: program.slug }) }}" role="button">Voir la fiche</a>

        </div>
        </div>
        </div>
        
        
       
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    
    <a href="{{ path("newprogram") }}">Ajouter un program</a></br>

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}