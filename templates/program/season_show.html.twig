{% extends 'base.html.twig' %}

{% block title %}Saison #{{ season.id }}{% endblock %}

{% block body %}

<div class="media">
  <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
  <div class="media-body">
    <h1 class="mt-0">{{ program.title }}</h1>
    <p>{{ program.summary }}</p>

    {% for episode in season.episodes %}
        <p>{{ episode.number }} - {{ episode.title }} - {{ season.id }}</p>
        <a href="{{ path('program_episode_show', { program: program.id , season: season.id , episode: episode.id }) }}">Voir l'épisode</a>

    {% endfor %}
    <a href="{{ path("program_show", { slug: program.slug }) }}">Voir la saison</a>

<a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}

